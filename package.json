{
  "name": "meteoropolis",
  "version": "1.0.0",
  "keywords": [],
  "license": "ISC",
  "main": "index.js",
  "app": {
    "manifest": {
      "name": "Meteoropolis",
      "short_name": "Meteoropolis",
      "start_url": "/",
      "display": "standalone",
      "background_color": "#ccc",
      "theme_color": "#000",
      "description": "Illustrative images for the weather of a city"
    },
    "dirs": {
      "icons": "public/assets/icons",
      "docRoot": "dist"
    },
    "urls": {
      "base": ".",
      "manifest": "manifest.json",
      "icons": "assets/icons"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "copyfiles": "1.2.0",
    "critical": "0.9.1",
    "npm-run-all": "4.1.1",
    "rollup": "0.50.0",
    "rollup-plugin-browsersync": "0.2.6",
    "rollup-plugin-buble": "0.16.0",
    "rollup-plugin-commonjs": "8.2.5",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-serve": "0.4.2",
    "rollup-plugin-uglify": "2.0.1",
    "serve": "6.3.1",
    "workbox-cli": "2.1.0",
    "write": "1.0.3"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:clear": "rm -rf ./dist",
    "build:rollup": "rollup -c",
    "build:rollup-sw": "rollup -c ./tools/rollup.config.sw.js",
    "build:copy": "copyup ./public/assets/{*,**/*} ./dist",
    "build:critical": "node ./tools/critical",
    "build:manifest": "node ./tools/manifest",
    "build:sw": "workbox generate:sw",
    "deploy": "run-s build deploy:*",
    "deploy:now": "now ./dist",
    "dryrun": "run-s build serve",
    "serve": "serve ./dist",
    "start": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
